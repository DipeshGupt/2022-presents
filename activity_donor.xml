<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorActivity"
    android:background="@drawable/one"
    android:layout_margin="5dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Enter Your Credentials For Donating Blood"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textname"
            android:layout_below="@id/textview"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:text="Full Name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editname"
            android:layout_below="@id/textname"
            android:hint="Enter Your Full Name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textname1"
            android:layout_below="@id/editname"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Gender"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editname1"
            android:layout_below="@id/textname1"
            android:hint="Enter Your Gender"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="6dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textname2"
            android:layout_below="@id/editname1"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editname2"
            android:layout_below="@id/textname2"
            android:hint="Enter Your Email"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textname3"
            android:layout_below="@id/editname2"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Address"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editname4"
            android:layout_below="@id/textname3"
            android:hint="Enter Your Address"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textname4"
            android:layout_below="@id/editname4"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Blood Type"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editname3"
            android:layout_below="@id/textname4"
            android:hint="Enter Your Blood Type"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="6dp"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_below="@id/textname4"
            android:layout_marginTop="70dp"
            android:text="Submit"
            android:id="@+id/submit"
            android:textSize="20sp"
            />






    </RelativeLayout>














</ScrollView>